{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "module": "ESNext",
      "moduleResolution": "node",
      "target": "ESNext",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "declaration": true,
      "declarationDir": "./types"
    },
    "include": ["src/**/*", "types/**/*"]
  }